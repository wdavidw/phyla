[Unit]
Description=HDFS NameNode

[Service]
User={{options.user.name}}
Group={{options.group.name}}
PIDFile={{options.pid_dir}}/hadoop-hdfs-namenode.pid
ExecStart=/usr/hdp/current/hadoop-hdfs-namenode/../hadoop/bin/hdfs --config {{options.conf_dir}} --daemon start namenode
ExecReload=/usr/hdp/current/hadoop-hdfs-namenode/../hadoop/bin/hdfs --config {{options.conf_dir}} --daemon restart namenode
ExecStop=/usr/hdp/current/hadoop-hdfs-namenode/../hadoop/bin/hdfs --config {{options.conf_dir}} --daemon stop namenode
LimitNOFILE={{options.user.limits.nofile}}

[Install]
WantedBy=multi-user.target
