{% for name, group in hostgroups %}
define hostgroup {
  hostgroup_name    {{ name }}
  alias             {{ group.alias }}{% if not group.members | isEmpty %}
  members           {{ group.members | join(',') }}{% endif %}{% if not group.hostgroup_members | isEmpty %}
  hostgroup_members {{ group.hostgroup_members | join(',') }}{% endif %}{% if not group.notes | isEmpty %}
  notes             {{ group.notes }}{% endif %}{% if not group.notes_url | isEmpty %}
  notes_url         {{ group.notes_url }}{% endif %}{% if not group.action_url | isEmpty %}
  action_url        {{ group.action_url }}{% endif %}{% if not group.realm | isEmpty %}
  realm             {{ group.realm }}{% endif %}
}
{% endfor %}
