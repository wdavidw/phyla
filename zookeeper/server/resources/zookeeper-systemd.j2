[Unit]
Description=Zookeeper Server

[Service]
User={{user.name}}
Group={{group.name}}
PIDFile={{pid_dir}}/zookeeper_server.pid
Environment=ZOOCFGDIR={{conf_dir}}
Environment=ZOOCFG=zoo.cfg
Environment=JMXPORT={{env.JMXPORT}}
ExecStart=/usr/hdp/current/zookeeper-server/bin/zkServer.sh start
ExecReload=/usr/hdp/current/zookeeper-server/bin/zkServer.sh restart
ExecStop=/usr/hdp/current/zookeeper-server/bin/zkServer.sh stop

[Install]
WantedBy=multi-user.target
