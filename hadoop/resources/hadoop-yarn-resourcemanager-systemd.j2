[Unit]
Description=Yarn ResourceManager

[Service]
Type=forking
User={{options.user.name}}
Group={{options.group.name}}
PIDFile={{options.pid_dir}}/hadoop-yarn-resourcemanager.pid
ExecStart=/usr/hdp/current/hadoop-yarn-resourcemanager/../hadoop/bin/yarn --config {{options.conf_dir}} --daemon start resourcemanager
ExecReload=/usr/hdp/current/hadoop-yarn-resourcemanager/../hadoop/bin/yarn --config {{options.conf_dir}} --daemon restart resourcemanager
ExecStop=/usr/hdp/current/hadoop-yarn-resourcemanager/../hadoop/bin/yarn --config {{options.conf_dir}} --daemon stop resourcemanager
LimitNOFILE={{options.user.limits.nofile}}

[Install]
WantedBy=multi-user.target
