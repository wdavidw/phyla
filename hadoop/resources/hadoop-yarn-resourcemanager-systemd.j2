[Unit]
Description=Yarn ResourceManager

[Service]
User={{options.user.name}}
Group={{options.group.name}}
PIDFile={{options.pid_dir}}/yarn-yarn-resourcemanager.pid
ExecStart=/usr/hdp/current/hadoop-yarn-resourcemanager/sbin/yarn-daemon.sh --config {{options.conf_dir}} start resourcemanager
ExecReload=/usr/hdp/current/hadoop-yarn-resourcemanager/sbin/yarn-daemon.sh --config {{options.conf_dir}} restart resourcemanager
ExecStop=/usr/hdp/current/hadoop-yarn-resourcemanager/sbin/yarn-daemon.sh --config {{options.conf_dir}} stop resourcemanager
LimitNOFILE={{options.user.limits.nofile}}

[Install]
WantedBy=multi-user.target
