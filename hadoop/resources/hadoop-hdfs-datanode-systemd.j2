[Unit]
Description=HDFS Datanode

[Service]
Type=forking
PIDFile={{options.pid_dir}}/hadoop-hdfs-datanode.pid
ExecStart=/usr/hdp/current/hadoop-hdfs-datanode/../hadoop/sbin/hadoop-daemon.sh --config {{options.conf_dir}} --script hdfs start datanode
ExecReload=/usr/hdp/current/hadoop-hdfs-datanode/../hadoop/sbin/hadoop-daemon.sh --config {{options.conf_dir}} --script hdfs restart datanode
ExecStop=/usr/hdp/current/hadoop-hdfs-datanode/../hadoop/sbin/hadoop-daemon.sh --config {{options.conf_dir}} --script hdfs stop datanode
LimitNOFILE={{options.user.limits.nofile}}

[Install]
WantedBy=multi-user.target
