[Unit]
Description=HDFS NameNode

[Service]
User={{options.user.name}}
Group={{options.group.name}}
PIDFile={{options.pid_dir}}/hadoop-hdfs-namenode.pid
ExecStart=/usr/hdp/current/hadoop-hdfs-namenode/../hadoop/sbin/hadoop-daemon.sh --config {{options.conf_dir}} --script hdfs start namenode
ExecReload=/usr/hdp/current/hadoop-hdfs-namenode/../hadoop/sbin/hadoop-daemon.sh --config {{options.conf_dir}} --script hdfs restart namenode
ExecStop=/usr/hdp/current/hadoop-hdfs-namenode/../hadoop/sbin/hadoop-daemon.sh --config {{options.conf_dir}} --script hdfs stop namenode
LimitNOFILE={{options.user.limits.nofile}}

[Install]
WantedBy=multi-user.target
